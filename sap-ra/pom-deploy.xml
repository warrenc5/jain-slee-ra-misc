<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>mofokom</groupId>
  <artifactId>sap</artifactId>
  <version xmlns:mvn="http://maven.apache.org/POM/4.0.0">1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>SAP SDP Modules</name>
  <url xmlns:mvn="http://maven.apache.org/POM/4.0.0">http://www.mofokom.biz/site/${project.artifactId}/</url>
  <modules>
    <module>lib</module>
    <module>event</module>
    <module>ra-type</module>
    <module>ra</module>
    <module>service</module>
    <module>service-du</module>
    <module>du</module>
  </modules>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>javax.sdp</groupId>
        <artifactId>nist-spd</artifactId>
        <version>1.0</version>
      </dependency>
      <dependency>
        <groupId>javax.slee</groupId>
        <artifactId>jainslee-api</artifactId>
        <version>1.1</version>
      </dependency>
      <dependency>
        <groupId>log4j</groupId>
        <artifactId>log4j</artifactId>
        <version>1.2.15</version>
        <exclusions>
          <exclusion>
            <artifactId>jms</artifactId>
            <groupId>javax.jms</groupId>
          </exclusion>
          <exclusion>
            <artifactId>jmxri</artifactId>
            <groupId>com.sun.jmx</groupId>
          </exclusion>
          <exclusion>
            <artifactId>jmxtools</artifactId>
            <groupId>com.sun.jdmk</groupId>
          </exclusion>
          <exclusion>
            <artifactId>mail</artifactId>
            <groupId>javax.mail</groupId>
          </exclusion>
        </exclusions>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <repositories>
    <repository>
      <id>maven2-repository.dev.java.net</id>
      <name>Java.net Maven2 Repository</name>
      <url>http://download.java.net/maven/2</url>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
    <repository>
      <id>maven-repository.dev.java.net</id>
      <name>Java.net Maven1 Repository</name>
      <url>http://download.java.net/maven/1</url>
      <layout>legacy</layout>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
    <repository>
      <id>opencloud-public</id>
      <name>OpenCloud Public Maven2 Repository</name>
      <url>http://developer.opencloud.com/maven2/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>opencloud-public</id>
      <url>http://developer.opencloud.com/maven2/public</url>
      <releases>
        <enabled>true</enabled>
        <checksumPolicy>warn</checksumPolicy>
      </releases>
    </pluginRepository>
  </pluginRepositories>
  <distributionManagement xmlns:mvn="http://maven.apache.org/POM/4.0.0">
    <snapshotRepository>
      <id>mofokom-public</id>
      <name>mofokom-public</name>
      <url>http://www.mofokom.biz/maven/snapshots-public</url>
      <uniqueVersion>false</uniqueVersion>
    </snapshotRepository>
    <repository>
      <id>mofokom-public</id>
      <name>mofokom-public</name>
      <url>http://www.mofokom.biz/maven/releases-public</url>
      <uniqueVersion>false</uniqueVersion>
    </repository>
    <site>
      <id>mofokom</id>
      <url>scp://${site.url}/${project.artifactId}</url>
    </site>
  </distributionManagement>
</project>
