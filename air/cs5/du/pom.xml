<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>air</artifactId>
        <groupId>mofokom</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <groupId>mofokom</groupId>
    <artifactId>air-du</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>air-du</name>
    <properties>
        <serial.number>4e44f238</serial.number>
    </properties>

    <url>http://www.mofokom.biz/site/air/${artifactId}</url>
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ucip-ratype</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>acip-ratype</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>vsip-ratype</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>acip-event</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ucip-event</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>vsip-event</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>common-library</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>common-event</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>


        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>common-library-impl</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>http-lib</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>http-library</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ucip-ra</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>acip-ra</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>vsip-ra</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>xmlrpc-impl</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>xmlrpc-impl</artifactId>
            <version>${project.version}</version>
            <classifier>interface</classifier>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>http-lib</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>javax.slee</groupId>
            <artifactId>jainslee-api</artifactId>
            <version>1.1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>deadlock</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>event-common</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <filtering>false</filtering>
                <directory>${basedir}/target/dependency</directory>
                <includes>
                    <include>*-event-*.jar</include>
                    <include>*-ratype-*.jar</include>
                    <include>*ucip-ra-*.jar</include>
                    <include>*acip-ra-*.jar</include>
                    <include>*vsip-ra-*.jar</include>
                    <!--
                    <include>*-service-*.jar</include>
                    -->
                    <include>http-library-*.jar</include>
                    <include>common-library-${pom.version}.jar</include>
                </includes>
                <excludes>
                    <exclude>*_proguard_base*</exclude>
                </excludes>
            </resource>
            <resource>
                <filtering>true</filtering>
                <directory>${basedir}/src/main/resources</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <excludeTransitive>true</excludeTransitive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.pyx4me</groupId>
                <artifactId>proguard-maven-plugin</artifactId>
                <version>2.0.4</version>
                <executions>
                    <execution>
                        <id>event</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>proguard</goal>
                        </goals>
                        <configuration>
                            <injar>common-event-1.0-SNAPSHOT.jar</injar>
                            <outjar>common-event-1.0-SNAPSHOT.jar</outjar>
                            <assembly>
                                <inclusions>
                                    <inclusion>
                                        <groupId>mofokom</groupId>
                                        <artifactId>event-common</artifactId>
                                    </inclusion>
                                </inclusions>
                            </assembly>
                            <options>
                                <option>-keep public class mofokom.resource.common.TransportException { *; }</option>
                                <option>-target 1.6</option>
                                <option>-ignorewarnings</option>
                                <!--
                                <option>-dontshrink</option>
                                <option>-dontoptimize</option>
                                <option>-dontoptimize</option>
                                <option>-dontobfuscate</option>
                                -->
                            </options>
                        </configuration>
                    </execution>
                    <execution>
                        <id>common</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>proguard</goal>
                        </goals>
                        <configuration>
                            <injar>common-library-1.0-SNAPSHOT.jar</injar>
                            <outjar>common-library-1.0-SNAPSHOT.jar</outjar>
                            <assembly>
                                <inclusions>
                                    <inclusion>
                                        <groupId>mofokom</groupId>
                                        <artifactId>xmlrpc-impl</artifactId>
                                    </inclusion>
                                    <inclusion>
                                        <groupId>mofokom</groupId>
                                        <artifactId>xmlrpc-impl</artifactId>
                                        <classifier>interface</classifier>
                                    </inclusion>
                                </inclusions>
                            </assembly>
                        </configuration>
                    </execution>
                    <!--

                    <execution>
                        <id>acip-ratype</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>proguard</goal>
                        </goals>
                        <configuration>
                            <injar>ucip-ratype-1.0-SNAPSHOT.jar</injar>
                            <outjar>common-library-1.0-SNAPSHOT.jar</outjar>
                            <assembly>
                                <inclusions>
                                    <inclusion>
                                        <groupId>mofokom</groupId><artifactId>xmlrpc-impl</artifactId>
                                    </inclusion>
                                    <inclusion>
                                        <groupId>mofokom</groupId><artifactId>xmlrpc-impl</artifactId><classifier>interface</classifier>
                                    </inclusion>
                                </inclusions>
                            </assembly>
                        </configuration>
                    </execution>
                    -->

                    <execution>
                        <id>ucip</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>proguard</goal>
                        </goals>
                        <configuration>
                            <injar>ucip-ra-1.0-SNAPSHOT.jar</injar>
                            <outjar>ucip-ra-1.0-SNAPSHOT.jar</outjar>
                            <exclusions>
                                <exclusion>
                                    <groupId>mofokom</groupId>
                                    <artifactId>acip-ra</artifactId>
                                </exclusion>
                                <exclusion>
                                    <groupId>mofokom</groupId>
                                    <artifactId>vsip-ra</artifactId>
                                </exclusion>
                            </exclusions>
                        </configuration>
                    </execution>
                    <execution>
                        <id>acip</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>proguard</goal>
                        </goals>
                        <configuration>
                            <skip>false</skip>
                            <injar>acip-ra-1.0-SNAPSHOT.jar</injar>
                            <outjar>acip-ra-1.0-SNAPSHOT.jar</outjar>
                            <exclusions>
                                <exclusion>
                                    <groupId>mofokom</groupId>
                                    <artifactId>ucip-ra</artifactId>
                                </exclusion>
                                <exclusion>
                                    <groupId>mofokom</groupId>
                                    <artifactId>vsip-ra</artifactId>
                                </exclusion>
                            </exclusions>
                        </configuration>
                    </execution>
                    <execution>
                        <id>vsip</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>proguard</goal>
                        </goals>
                        <configuration>
                            <skip>false</skip>
                            <injar>vsip-ra-1.0-SNAPSHOT.jar</injar>
                            <outjar>vsip-ra-1.0-SNAPSHOT.jar</outjar>
                            <includeDependency>true</includeDependency>
                            <exclusions>
                                <exclusion>
                                    <groupId>mofokom</groupId>
                                    <artifactId>acip-ra</artifactId>
                                </exclusion>
                                <exclusion>
                                    <groupId>mofokom</groupId>
                                    <artifactId>ucip-ra</artifactId>
                                </exclusion>
                            </exclusions>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <outputDirectory>${project.build.directory}/dependency</outputDirectory>
                    <!--
                    <skip>true</skip>
                    -->
                    <assembly>
                        <inclusions>
                            <inclusion>
                                <filter>!*.jar, !**/library-jar.xml</filter>
                                <groupId>mofokom</groupId>
                                <artifactId>http-lib</artifactId>
                            </inclusion>
                            <inclusion>
                                <filter>!*.jar, !**/*.xml</filter>
                                <groupId>mofokom</groupId>
                                <artifactId>common-library</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>mofokom</groupId>
                                <artifactId>common-library-impl</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>mofokom</groupId>
                                <artifactId>xmlrpc-impl</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>mofokom</groupId>
                                <artifactId>deadlock</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>mofokom</groupId>
                                <artifactId>ra-common</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>mofokom</groupId>
                                <artifactId>ra-http-common</artifactId>
                            </inclusion>
                            <!--
                            <inclusion>
                                <groupId>mofokom</groupId>
                                <artifactId>event-common</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>mofokom</groupId><artifactId>xmlrpc-lib</artifactId><classifier>interface</classifier>
                            </inclusion>
                            -->
                        </inclusions>
                    </assembly>
                    <includeDependency>true</includeDependency>
                    <inFilter>!*, !*.DSA, !**/*.DSA, !**/*.SF</inFilter>
                    
                    <options>
                        <!--
                        <option>-dontpreverify</option>
                        -->
                        <option>-target 1.6</option>
                        <option>-ignorewarnings</option>
                        <option>-dontshrink</option>
                        <option>-dontoptimize</option>
                        <!--
                        <option>-dontobfuscate</option>
                        -->
                        <!--
                        
                        <option>-repackageclasses mofokom.ra</option> 
                        <option>-keepattributes LineNumberTable,InnerClasses,SourceFile,ExceptionsLineNumberTable,Deprecated,Signature,*Annotation*,EnclosingMethod</option>
                        -->
                        <option>-adaptresourcefilecontents **.properties,META-INF/</option>
                        <option>-flattenpackagehierarchy mofokom.ra</option>
                        <option>-injars target/dependency/deadlock-1.0-SNAPSHOT.jar(!META-INF/*)</option>
                        <option>-renamesourcefileattribute ${project.name}-${maven.build.timestamp}-${serial.number}.java</option>
                        <option>-keepattributes InnerClasses,SourceFile,Signature,*Annotation*,EnclosingMethod</option>
                        <option>-overloadaggressively</option>
                        <option>-keep class * extends java.lang.Enum</option>
                        <option>-keep public class * extends javax.slee.resource.ResourceAdaptor { *; }</option>
                        <option>-keep public class mofokom.ccn.resource.ResourceAdaptorUsageParameters { *; }</option>
                        <option>-keep public class * implements mofokom.ccn.resource.ResourceAdaptorUsageParameters { *; }</option>
                        <option>-keep class * implements mofokom.ccn.impl.resource.ObjectFactory { *; }</option>
                        <option>-keep class xmlrpc.* { *; }</option>
                        <option>-keep interface xmlrpc.* { *; }</option>
                        <option>-keep public interface mofokom.resource.http.common.HttpUsageParameters { *; }</option>
                        <!--
                        <option>-dontskipnonpubliclibraryclasses</option>
                        <option>-keep public class * implements mofokom.ccn.Marker { *; }</option>
                        -->
                        <option>-keep public class mofokom.ccn.TransportError { *; }</option>
                        <option>-keep public class mofokom.resource.common.TransportException { *; }</option>

                        <option>-keep public interface * extends mofokom.ccn.Marker { *; }</option>
                        <option>-keep public class mofokom.ccn.Marker { *; }</option>
                        <option>-keep public class mofokom.ccn.* { *; }</option>
                        <option>-printmapping ${basedir}/src/main/proguard/out.pro</option>
                        <option>-applymapping ${basedir}/src/main/proguard/out.pro</option>

                    </options>
                    <libs>
                        <lib>${java.home}/lib/rt.jar</lib>
                    </libs>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>net.sf.proguard</groupId>
                        <artifactId>proguard</artifactId>
                        <version>4.3</version>
                        <scope>runtime</scope>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jarsigner-plugin</artifactId>
                <executions>
                    <execution>
                        <id>sign</id>
                        <phase>package</phase>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>**/*.jar</include>
                            </includes>
                            <processAttachedArtifacts>false</processAttachedArtifacts>
                        </configuration>
                    </execution>
                    <execution>
                        <id>sign-du</id>
                        <phase>install</phase>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                        <configuration>
                            <archiveDirectory>target/</archiveDirectory>
                            <includes>
                                <include>*-du-*.jar</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <!--
                    <skip>true</skip>
                    -->
                    <archiveDirectory>target/classes</archiveDirectory>
                    <processMainArtifact>false</processMainArtifact>
                    <removeExistingSignatures>true</removeExistingSignatures>
                    <keystore>/virt/main.jks</keystore>
                    <!-- -Djarsigner.alias="Alias Name" -->
                    <alias>slee</alias>
                    <storepass>kraj2003</storepass>
                    <!--
                    <verify>true</verify>
                    <verbose>true</verbose>
                    -->
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.3.2</version>
                <executions>
                    <execution>
                        <id>default-jar</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                        <attach>true</attach>
                            <excludes>
                                <exclude>**proguard_base**</exclude>
                            </excludes>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <archive>
                        <addMavenDescriptor>false</addMavenDescriptor>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
